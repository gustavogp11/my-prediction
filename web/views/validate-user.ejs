<!DOCTYPE html>
<html lang="en">

<%- include('head'); -%>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('sidebar', {active: 'validate-user'}); -%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include('topbar'); -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">
                        <%= __('validate_user.title') %>
                    </h1>
                    <p class="mb-4"><i class="fa fa-dollar-sign fa-lg" style="color:green"></i> <%= __('validate_user.warning_cost') %></p>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><%= __('validate_user.input_token') %></h6>
                        </div>
                        <div class="card-body">
                            <form action="users/validate" method="POST">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <span class="font-weight-bold">Token: </span>
                                        <input name="token" class="form-control" >
                                        <div class="pt-2">
                                            <button class="btn btn-primary btn-block"><%= __('Validate') %></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include('footer'); -%>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('body-end'); -%>

</body>

</html>