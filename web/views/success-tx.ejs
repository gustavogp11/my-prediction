<!DOCTYPE html>
<html lang="en">

<%- include('head'); -%>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('sidebar', {active: ''}); -%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include('topbar'); -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                   
                    <div class="text-center">
                        <div class="mx-auto" >
                            <i class="fa fa-success text-success"></i>
                        </div>
                        <p class="lead text-gray-800 mb-2"><%= __('Transaction') %>: <%= tx %></p>
                        <% if(locals.utils.appConfig().ethereum.viewTxUrl) { %>
                            <div>
                                <a href="<%= utils.replace(locals.utils.appConfig().ethereum.viewTxUrl, '${address}', tx) %>" target="_blank">
                                    <%= utils.replace(locals.utils.appConfig().ethereum.viewTxUrl, '${address}', tx) %>
                                </a>
                            </div>
                        <% } %>
                        <div class="mt-2">
                            <a  href="">&larr; <%= __('Go to home') %></a>
                        </div>
                    </div>
        
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include('footer'); -%>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('body-end'); -%>

</body>

</html>