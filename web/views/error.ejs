<!DOCTYPE html>
<html lang="en">

<%- include('head'); -%>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('sidebar', {active: ''}); -%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include('topbar'); -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <% if (locals.errorPage) { %>
                        <%- include('errors/' + errorPage, {description: locals.description}) %>
                    <% } %>
                    <% if(locals.errorMessage) { %>
                        <div class="text-center">
                            <div class="error mx-auto" data-text="Error">Error</div>
                            <p class="lead text-gray-800 mb-5"><%= errorMessage %></p>
                            <a href="/">&larr; Go to home</a>
                        </div>
                    <% } %>
        
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include('footer'); -%>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('body-end'); -%>

</body>

</html>