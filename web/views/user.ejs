
<!DOCTYPE html>
<html lang="en">

<%- include('head'); -%>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('sidebar', {active: 'users'}); -%>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include('topbar'); -%>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">
                Usuario: <%= user.address %>
          </h1>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Informaci√≥n del usuario</h6>
            </div>
            <div class="card-body">
                <div>
                    <span class="font-weight-bold"><%= __('Email') %>: </span><label><%= user.email %></label>                    
                </div>
                <div>
                    <span class="font-weight-bold"><%= __('Created date') %>: </span><label><%= utils.formatDate(user.createdAt*1000) %></label>
                </div>
                <div>
                    <span class="font-weight-bold"><%= __('Validated') %>: </span><%- include('app-bool', {value: user.validatedAt > 0}) %> 
                    <% if(user.validatedAt > 0) { %>
                        <span class="text-success"><%= utils.formatDate(user.validatedAt*1000) %></span>
                    <% } %>
                </div>
                <div>
                    <span class="font-weight-bold"><%= __('Enabled') %>: </span> <%- include('app-bool', {value: user.enabled}) %> 
                </div>
            </div>
        </div>
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary"><%= __('Messages') %></h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th><%= __('Address') %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0; i < user.myMessages.length; i++) { %>
                        <tr>
                            <td>
                                <a href="message/<%= user.myMessages[i] %>"><%= user.myMessages[i] %></a>
                            </td>
                        </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <%- include('footer'); -%>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <%- include('body-end'); -%>

</body>

</html>